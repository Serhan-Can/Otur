<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Accommodation">

    <Button
        android:id="@+id/house"
        android:layout_width="281dp"
        android:layout_height="215dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="432dp"
        android:backgroundTint="#2196F3"
        android:text="I want to find a house"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="332dp"
        android:layout_height="51dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="116dp"
        android:text="Accommodation Type"
        android:textSize="30.0dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/roommate"
        android:layout_width="279dp"
        android:layout_height="205dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="212dp"
        android:backgroundTint="#2196F3"
        android:text="I want to find a dormitory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="189dp"
        android:layout_height="61dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2196F3"
        android:text="Go to my profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/accommodationBack"
        android:layout_width="151dp"
        android:layout_height="60dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2196F3"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
